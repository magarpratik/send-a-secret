#!/bin/sh

# Navigate to the frontend folder and run npm lint
echo "Running frontend lint..."
cd frontend
npm run lint
FRONTEND_LINT_STATUS=$?
cd ..

# If any linting fails, prevent the commit
if [ $FRONTEND_LINT_STATUS -ne 0 ] || [ $BACKEND_LINT_STATUS -ne 0 ]; then
  echo "Linting failed. Please fix the issues before committing."
  exit 1
fi

echo "Linting passed. Proceeding with commit."
